<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emg">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/emp_icon"
        android:label="EMS"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMG">
        <activity android:name=".admin.create_news.CreateNewsActivity"
            android:theme="@style/Theme.EMG_NO_ACTION"></activity>
        <activity android:name=".admin.news.NewsActivity" />
        <activity
            android:name=".admin.view_employee.ViewEmployeeActivity"
            android:theme="@style/Theme.EMG_NO_ACTION" />
        <activity android:name=".employee.calendar.Calendar" />
        <activity android:name=".employee.leave_status.LeaveStatus" />
        <activity android:name=".employee.leave_request.LeaveRequestActivity" />
        <activity android:name=".employee.dashboard.EmployeeDashboard" />
        <activity android:name=".admin.attendance.CreateAttendanceActivity" />
        <activity
            android:name=".admin.add_employee.AddEmployeeActivity"
            android:theme="@style/Theme.EMG_NO_ACTION" />
        <activity android:name=".MainActivity" />
        <activity android:name=".admin.view_attendance.AttendanceActivity" />
        <activity android:name=".admin.leave.Leave" />
        <activity android:name=".admin.employee.EmployeeActivity" />
        <activity android:name=".Newsfeed" />
        <activity
            android:name=".login.Login"
            android:theme="@style/Theme.EMG_NO_ACTION" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>