<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".employee.leave_request.LeaveRequestActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="File Leave"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="NAME:"
                android:id="@+id/name"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Juan Dela Cruz"
                    android:layout_toRightOf="@+id/name"
                    android:id="@+id/tv_name"
                    android:textSize="20sp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/name"
                    android:text="EMPLOYEE ID:"
                    android:id="@+id/id"
                    android:textSize="20sp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="1234"
                    android:layout_toRightOf="@+id/id"
                    android:layout_below="@+id/tv_name"
                    android:id="@+id/tv_id"
                    android:textSize="20sp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/tv_name"
                    android:text="DEPARTMENT:"
                    android:layout_toLeftOf="@+id/tv_department"
                    android:id="@+id/department"
                    android:textSize="20sp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_name"
                    android:text="IT"
                    android:id="@+id/tv_department"
                    android:textSize="20sp"
                    android:textColor="@color/black">
                </TextView>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="DATE BEGIN:"
               android:layout_marginBottom="5sp"
               android:textSize="20sp"
               android:textColor="@color/black"
               android:id="@+id/date_begin">
           </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Begin"
                android:gravity="center"
                android:layout_toRightOf="@id/date_begin"
                ></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/date_begin"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/to">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE END:"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/to"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/date_end">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date End:"
                    android:gravity="center"
                    android:layout_below="@+id/to"
                    android:layout_toRightOf="@id/date_end"></EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TYPE OF LEAVE:"
                    android:layout_below="@id/date_end"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/type">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/type"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/date_end"
                    ></EditText>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REASON:"
                android:layout_below="@id/type"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/reason">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="5"
                android:minLines="1"
                android:scrollbars="vertical" />
        </LinearLayout>

    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            android:id="@+id/btn_add_employee"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="File Leave"
            android:backgroundTint="#00FF00"></Button>
    </RelativeLayout>



