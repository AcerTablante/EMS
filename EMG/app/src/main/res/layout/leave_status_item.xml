<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/emp_icon"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="NAME:"
                android:id="@+id/name"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:text="John Cena"
                android:layout_toRightOf="@+id/name"
                android:id="@+id/tv_name"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/name"
                android:text="Position:"
                android:layout_marginLeft="7dp"
                android:id="@+id/id"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:text="Manager"
                android:layout_toRightOf="@+id/id"
                android:layout_below="@+id/tv_name"
                android:id="@+id/tv_position"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/id"
                android:text="Leave Type:"
                android:layout_marginLeft="7dp"
                android:id="@+id/description"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/id"
                android:layout_toRightOf="@id/description"
                android:text="Sick Leave"
                android:id="@+id/tv_type"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/description"
                android:layout_marginTop="20dp"
                android:text="DATE BEGIN:"
                android:layout_marginLeft="7dp"
                android:id="@+id/date_begin"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5sp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/description"
                android:layout_toRightOf="@id/date_begin"
                android:text="Nov 1, 2022"
                android:id="@+id/tv_date_begin"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/tv_date_end"
                android:layout_below="@+id/description"
                android:layout_marginTop="20dp"
                android:text="DATE END:"
                android:id="@+id/date_end"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/description"
                android:layout_alignParentRight="true"
                android:text="Nov 3, 2022"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_date_end"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginLeft="2dp"
                android:layout_below="@id/date_begin"
                android:layout_marginBottom="5dp"
                android:weightSum="1">
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:background="@color/yellow"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_color"
                    android:layout_weight="0.7">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginRight="7dp"
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"></TextView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"></LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>